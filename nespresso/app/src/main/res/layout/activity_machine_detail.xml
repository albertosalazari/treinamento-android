<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_machine_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_machine_detail_photo"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_machine_detail_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/machines" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_machine_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_dark"
        android:textSize="35sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/iv_machine_detail_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_machine_detail_price"
        tools:text="Inissia" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_machine_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="33sp"
        app:layout_constraintTop_toBottomOf="@id/tv_machine_detail_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_machine_detail_description"
        tools:text="R$ 499" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_machine_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_dark"
        android:textSize="20sp"
        android:textAlignment="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_machine_detail_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_machine_detail_button"
        tools:text="Premiada por seu compacto design, a Inissia está aqui para garantir que a sua xícara de café seja prática, sem deixar nada fora do lugar." />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_machine_detail_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:text="Adicionar á sacola"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/tv_machine_detail_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>